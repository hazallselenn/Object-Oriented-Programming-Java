import java.util.*;
public class SayilariToplama {
    

    public static void main(String[] args) {
        int sayi1,sayi2,toplam;
        Scanner sc=new Scanner(System.in);
        
        System.out.print("Bir sayi girin:");
        sayi1=sc.nextInt();
        System.out.print("Bir sayi girin:");
        sayi2=sc.nextInt();
        toplam=sayi1+sayi2;
        
        System.out.println("toplam: "+toplam);
        
        
        
    }
}
